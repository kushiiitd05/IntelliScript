# Required API Keys for IntelliScript
# Copy this file to .env and fill in your API keys

# Hugging Face Token (Required for speaker diarization)
# Get it from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Groq API Key (Required for Q&A functionality)  
# Get it from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Nebius AI API Key (Required for summarization)
# Get it from: https://studio.nebius.ai/
NEBIUS_API_KEY=your_nebius_api_key_here

# Optional Configuration
REDIS_URL=redis://localhost:6379
MAX_UPLOAD_SIZE=500MB

# Database Configuration (if using database storage)
DATABASE_URL=sqlite:///./intelliscript.db

# Security (generate a random secret key)
SECRET_KEY=your_secret_key_here_generate_a_random_string

# Environment
ENVIRONMENT=development
DEBUG=True